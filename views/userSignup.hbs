<head>
    <title>Palce |SignUp</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="/stylesheets/navigation.css">
    <link rel="shortcut icon" href="/images/faviconn.png" type="image/x-icon">
    <script src="/scripts/bootstrap.min.js"></script>
    <script src="/scripts/navigation.js"></script>
</head>
<body>
    <header id="head">
        <nav class="navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand" id="header">PALCE CHAT</a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Home</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <section>
        <div class="container-fluid">
            <div id="error">
                    <p>{{error}}</p>
                </div>
            <div id="signin">
                <h2>SIGN UP</h2>
                <form action="/create-account" method="post" onsubmit="return validation();">
                    <div id="nam">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control">
                    </div>
                    <div id="gende">
                        <label for="gender">Gender</label>
                        <select name="gender" id="gender" class="form-control" required = "required">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                    <div id="file">
                        <label for="photo">Photo</label>
                        <input type="file" name="photo" id="photo" class="form-control">
                    </div>
                    <div id="usernam">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="form-control">
                    </div>
                    <div id="passwor">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control">
                    </div>
                    <div id="confir">
                        <label for="repassword">Confirm Password</label>
                        <input type="password" name="" id="repassword" class="form-control">
                    </div>
                    <div id="button">
                        <button type="submit" class="btn">SIGN UP</button>
                    </div>
                    
                </form>
            </div>
            <div id="create">
                <p><span>Have an account?</span></p>
                <div id="signup">
                    <p id="signup"><a href="/">Signin</a></p>
                </div>
                
            </div>
        </div>
    </section>
    <footer>
        <div id="foot">
            Palce &copy; 2018 |Crafted by Santos
        </div>
    </footer>
    <script>
        function validation(){
            var username = document.getElementById('username').value,
                name = document.getElementById('name').value,
                gender = document.getElementById('gender').value,
                repassword = document.getElementById('repassword').value,
                wps = /^\s*$/;
            if(wps.test(username) || wps.test(password) || wps.test(name) || wps.test(gender) || wps.test(repassword)){
                alert('Please no field must be empty');
                return false;
            }
            if(password !== repassword){
                alert('Password do not match');
                return false;
            }
            else{
                return true;
            }
        }
    </script>
    
</body>